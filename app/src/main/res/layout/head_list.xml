<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dongmihui.widget.ContactItemView
        android:id="@+id/civ_new_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contactItemImage="@drawable/em_new_friends_icon"
        app:contactItemName="新的朋友"
        >
    </com.dongmihui.widget.ContactItemView>
    <com.dongmihui.widget.ContactItemView
        android:id="@+id/civ_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contactItemImage="@drawable/em_groups_icon"
        app:contactItemName="群聊"
        >

    </com.dongmihui.widget.ContactItemView>


</LinearLayout>