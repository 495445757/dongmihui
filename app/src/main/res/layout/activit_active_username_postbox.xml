<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/day_layout_bg_normal"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bar_bg"
    >
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_back"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:text="激活账号"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/layoutPhone"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip">

        <TextView
            android:gravity="center"
            android:id="@+id/imgPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="邮箱"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/imgPhone"
            android:background="@null"
            android:hint="请输入您的董秘邮箱"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/cancel_phone"
            android:visibility="invisible" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_below="@+id/layoutPhone">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#ffdddddd" />

        <TextView
            android:id="@+id/imgCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="激活码"
            android:gravity="center"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/imgCode"
            android:background="@null"
            android:hint="请输入您董秘邮箱收到的激活码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />


    </RelativeLayout>

    <Button
        android:textColor="@color/white"
        android:text="下一步"
        android:background="@color/login_ash"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

</LinearLayout>