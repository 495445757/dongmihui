<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/day_layout_bg_normal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bar_bg"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/btn_back"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:text="账号信息"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textSize="14sp"
        android:text="修改手机号"
            android:textColor="@color/white"
            android:background="@drawable/btn_modfiy_pressed_bg"

        />
        <TextView
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="修改密码"
            android:textColor="@color/bar_bg"
            android:textSize="14sp"
            android:background="@drawable/btn_modfiy_bg"
            />

    </LinearLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/layoutPhone"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip">

        <TextView
            android:id="@+id/imgPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="输入手机号码"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/imgPhone"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/cancel_phone"
            android:visibility="invisible" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"

        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_below="@+id/layoutPhone">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#ffdddddd" />

        <TextView
            android:id="@+id/imgCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="输入验证码"
            android:textSize="16sp"                />

        <EditText
            android:id="@+id/code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/imgCode"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/btnGetCode"
            android:layout_width="85.0dip"
            android:layout_height="33.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/im_getcode"
            />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/layout_modfiy_pwd"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip">

        <TextView
            android:id="@+id/modfiypwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="原密码"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/old_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/modfiypwd"
            android:background="@null"
            android:hint="请输入原始登陆密码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/cancel_phone"
            android:visibility="invisible" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/white"

        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_below="@+id/layoutPhone">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#ffdddddd" />

        <TextView
            android:id="@+id/newpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="新密码"
            android:textSize="16sp"                />

        <EditText
            android:id="@+id/put_newpwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/newpwd"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />


    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45.0dip">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#ffdddddd" />
        <TextView
            android:id="@+id/once_newpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="确认密码"
            android:textSize="16sp"                />
        <EditText
            android:id="@+id/put_once_newpwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/once_newpwd"
            android:background="@null"
            android:hint="请重新输入新密码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />



    </RelativeLayout>




    <Button
        android:textColor="@color/white"
        android:text="确认修改"
        android:background="@color/login_ash"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>