<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_privacy_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dongmihui.activity.PrivacySettingsActivity">

    <include layout="@layout/layout_main_header" />

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_switch_proving"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/em_btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:text="加我为好友时需要验证"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16"/>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_proving_open"
                    android:src="@drawable/open_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_proving_close"
                    android:src="@drawable/close_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/list_view_divider" />

        <RelativeLayout
            android:id="@+id/rl_switch_search"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/em_btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:text="可以搜索到我"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16"/>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_search_open"
                    android:src="@drawable/open_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_search_close"
                    android:src="@drawable/close_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/list_view_divider" />
        <RelativeLayout
            android:id="@+id/rl_switch_public"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/em_btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:text="个人资料公开"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16"/>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_public_open"
                    android:src="@drawable/open_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_public_close"
                    android:src="@drawable/close_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/list_view_divider" />
        <TextView
            android:id="@+id/tv_blank_list"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="黑名单"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

</LinearLayout>
