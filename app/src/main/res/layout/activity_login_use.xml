<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/day_layout_bg_normal"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:background="@color/bar_bg"
      android:gravity="center"

      >
      <ImageView
          android:layout_marginTop="5dp"
          android:layout_width="65dp"
          android:layout_height="wrap_content"
          android:src="@drawable/text_bar"
          />

  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:background="@drawable/login_banner"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户登陆"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        />
    />
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/layoutPhone"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip">

        <ImageView
            android:id="@+id/imgPhone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/login_head"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/imgPhone"
            android:background="@null"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/cancel_phone"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_below="@+id/layoutPhone">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#ffdddddd" />

        <ImageView
            android:id="@+id/imgCode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/login_pwd" />

        <EditText
            android:id="@+id/code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/imgCode"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="忘记密码"
            android:textSize="18sp"
            />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="账户激活"
            android:textSize="18sp"
            />
        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_marginLeft="55dp"
                android:id="@+id/im_hlpe"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/login_help"
                />
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助"
                android:layout_toRightOf="@id/im_hlpe"
                android:textSize="18sp"
                />

        </RelativeLayout>


    </LinearLayout>
    <Button
        android:textColor="@color/white"
        android:text="立即登陆"
        android:background="@drawable/login_btn_main_bg"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>